{
  "name": "near-ignition-lerna",
  "desription": "A multi-application NEAR protocol experiment.",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "clean": "lerna clean",
    "deploy": " lerna run deploy",
    "watch": "lerna run --parallel watch",
    "start": "lerna run start"
  },
  "workspaces": {
    "package-entry": "main",
    "packages": [
      "apps/*",
      "packages/*",
      "packages/ethers-react/packages/*",
      "packages/ethers-react-ui/*",
      "packages/open-finance/*",
      "packages/general/*",
      "packages/horizin/*"
    ],
    "nohoist": [
      "**/webpack-dev-server",
      "**/webpack-cli",
      "**/babel-loader",
      "**/babel-jest",
      "**/cross-env",
      "**/near-test",
      "**/near-test/**"
    ]
  },
  "devDependencies": {
    "babel-loader-lerna-cra": "^0.1.3",
    "jest-prop-type-error": "^1.1.0",
    "lerna": "^3.10.7",
    "prettier": "^1.16.1"
  },
  "dependencies": {
    "babel-eslint": "10.0.1",
    "eslint": "5.16.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-config-react-app": "^4.0.0",
    "eslint-config-xo": "^0.26.0",
    "eslint-config-xo-react": "^0.19.0",
    "eslint-plugin-flowtype": "^3.6.1",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.6.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/setupTests.{js,jsx}",
      "!src/index.{js,jsx}",
      "!src/serviceWorker.{js,jsx}",
      "!src/**/*.(spec|test|stories).{js,jsx}"
    ]
  }
}
